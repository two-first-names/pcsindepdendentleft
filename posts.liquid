<h2>Posts</h2>
{%- for post in collections.posts reversed -%}
    <article>
        <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
        <p>Posted on {{ post.data.date }} by {{ post.data.author }}.</p>
        <p>{{ post.data.excerpt }}</p>
    </article>
{%- endfor -%}